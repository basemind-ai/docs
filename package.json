{
	"name": "basemind-docs",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build": "docusaurus build",
		"clear": "docusaurus clear",
		"deploy": "docusaurus deploy",
		"docusaurus": "docusaurus",
		"format": "prettier --write '**/*.{ts,tsx,js,md,mdx,json,yaml,yml,css}'",
		"lint": "eslint --fix --max-warnings 0 --ignore-path .gitignore .",
		"spellcheck": "cspell lint '**/*.{js,ts,tsx,md,mdx}'",
		"prepare": "husky install",
		"serve": "docusaurus serve",
		"start": "docusaurus start",
		"swizzle": "docusaurus swizzle",
		"typecheck": "tsc",
		"write-heading-ids": "docusaurus write-heading-ids",
		"write-translations": "docusaurus write-translations"
	},
	"dependencies": {
		"@docusaurus/core": "3.0.1",
		"@docusaurus/preset-classic": "3.0.1",
		"@docusaurus/theme-classic": "^3.0.1",
		"@mdx-js/react": "^3.0.0",
		"@types/node": "^20.10.5",
		"clsx": "^2.0.0",
		"prism-react-renderer": "^2.3.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@docusaurus/eslint-plugin": "^3.0.1",
		"@docusaurus/module-type-aliases": "3.0.1",
		"@docusaurus/tsconfig": "3.0.1",
		"@docusaurus/types": "3.0.1",
		"@prettier/plugin-xml": "^3.2.2",
		"@tool-belt/eslint-config": "^5.0.3",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"cspell": "^8.1.3",
		"eslint": "^8.56.0",
		"eslint-plugin-mdx": "^3.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"prettier": "^3.1.1",
		"prettier-plugin-sort-json": "^3.1.0",
		"typescript": "~5.3.3"
	},
	"lint-staged": {
		"*.{js,md,mdx,json,yaml,yml,css}": "prettier --write",
		"*.{ts,tsx,js,md,mdx}": "eslint --fix --max-warnings 0",
		"*.{js,ts,tsx,md,mdx,css}": "cspell lint"
	},
	"browserslist": {
		"production": [
			">0.5%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 3 chrome version",
			"last 3 firefox version",
			"last 5 safari version"
		]
	},
	"engines": {
		"yarn": "please-use-pnpm",
		"npm": "please-use-pnpm",
		"pnpm": ">=8.0.0",
		"node": ">=21.0.0"
	}
}
